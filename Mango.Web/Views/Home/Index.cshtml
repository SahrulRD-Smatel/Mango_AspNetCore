@model IEnumerable<ProductDto>

<form>
    <div class=" container row">


        @foreach (var product in Model)
        {

            <div class="col-12 col-md-6 col-lg-4">
                <div class="p-0 my-3 border rounded">
                    <div class="card">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <h6 class="card-subtitle text-muted">Support card subtitle</h6>
                                </div>
                                <img class="img-fluid" src="@product.ImageUrl" alt="Card image cap" />
                                <div class="card-body">
                                    <div class="d-flex justify-content-between py-2">
                                        <span class="text-danger" style="font-size:20px;">@string.Format("{0:c}", product.Price)</span>
                                        <span class="badge bg-warning text-white p-2">@product.CategoryName</span>
                                    </div>
                                    <p class="card-text">@Html.Raw(product.Description)</p>
                                    <div class="row">
                                        <div class="col">
                                            <a asp-action="ProductDetails" asp-route-productId="@product.ProductId" class="btn btn-success form-control">Details</a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>
</form>